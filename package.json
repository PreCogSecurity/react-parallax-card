{
  "name": "react-parallax-card",
  "description": "React component for a 3D card with parallax effects similar to Apple TV app icons.",
  "version": "0.2.0",
  "author": "Theo Pak <theopak@gmail.com (https://github.com/theopak)",
  "license": "Apache-2.0",
  "homepage": "https://theopak.github.io/react-parallax-card/",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/theopak/react-parallax-card.git"
  },
  "bugs": {
    "url": "https://github.com/theopak/react-parallax-card/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "lint": "eslint **/*.js --ignore-pattern '/dist/*'",
    "test": "react-scripts test --env=jsdom",
    "build:lib": "babel ./src/ParallaxCard.js --source-maps --out-dir ./dist/lib",
    "build:docs": "react-scripts build",
    "eject": "react-scripts eject"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "globals": {
      "__DEV__": true
    },
    "options": {
      "failOnError": true
    },
    "extends": [
      "standard",
      "standard-react"
    ],
    "parser": "babel-eslint",
    "rules": {
      "object-curly-spacing": [
        "warn",
        "always"
      ]
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "react-addons-test-utils": "^15.4.2",
    "react-scripts": "^0.9.0"
  }
}
